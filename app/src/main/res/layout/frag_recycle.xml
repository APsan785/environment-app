<?xml version="1.0" encoding="utf-8" ?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A65517"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAE4AF"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_black"
            android:text="Call a Recycling Truck and it will reach your place in an hour."
            android:textColor="#A65517"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="Help in protecting the environment and keep recycling your goods. Any kind of goods that would be useless for you, can be given to us at exciting rates..*"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_black"
            android:text="for 1 kg - 15/-"
            android:textColor="#813434"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_black"
            android:text="for 2 kg - 32/-"
            android:textColor="#813434"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_black"
            android:text="for 4 kg - 70/-"
            android:textColor="#813434"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_black"
            android:text="for 10 kg - 200/-"
            android:textColor="#813434"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/lato_black"
            android:text="* The prices written are for \nnewspapers onlyfor other details \nask the recycling truck person"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l2"
        android:layout_marginTop="16dp"
        android:background="#FAE4AF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_black"
            android:text="Fill the Below form with your address to call our people to take the material. Payment will be given hand-to-hand."
            android:textColor="#603932"
            android:textSize="20sp" />

    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/bottom_sheet"
                style="?attr/bottomSheetStyle"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/bottom_sheet_bg"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/slide_bottom_sheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:padding="3dp"
                        android:text="SLIDE ME UP!!"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/bottom_sheet_linlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Your Address"
                            android:textColor="@color/white"
                            android:textSize="17sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/address_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#41756F"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/address_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:paddingVertical="9dp"
                                android:textSize="19sp"
                                tools:text="heyyy" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="17sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="15dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#41756F"
                            app:errorEnabled="true"
                            app:hintEnabled="false"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/name_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:paddingVertical="9dp"
                                android:textSize="19sp"
                                tools:text="heyyy" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Mobile Number"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/numb_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="15dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxStrokeColor="#41756F"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/numb_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:inputType="phone"
                                android:paddingVertical="9dp"
                                android:textSize="19sp"
                                tools:text="heyyy" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/submit_btn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="20dp"
                            android:text="Submit"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"
                            app:strokeColor="#3B4783"
                            app:strokeWidth="2dp"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/booked_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:text="Your Request of Recycling Truck has been accepted"
                            android:textColor="#D30707"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>





</RelativeLayout>